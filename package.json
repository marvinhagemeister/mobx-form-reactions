{
  "name": "mobx-form-reactions",
  "version": "3.4.1",
  "description": "MobX form state classes",
  "main": "lib/index.js",
  "typings": "index.d.ts",
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:marvinhagemeister/mobx-form-reactions.git"
  },
  "scripts": {
    "clean": "rimraf dist/ lib/",
    "lint": "tslint 'src/**/*.ts' 'examples/**/*.ts'",
    "watch": "tsc -w",
    "build": "npm run clean && tsc && babel lib/ --out-dir lib/",
    "test": "mocha --compilers ts:ts-node/register 'src/**/__tests__/*.spec.ts' 'examples/**/__tests__/*.spec.ts'",
    "test-watch": "npm t -- -w -R min",
    "coverage": "nyc npm t",
    "prepublish": "npm run lint && npm t && npm run build"
  },
  "dependencies": {
    "mobx": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.39",
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "rimraf": "^2.5.4",
    "ts-node": "^2.0.0",
    "tslint": "^4.4.2",
    "typescript": "^2.1.5"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "node_modules/",
      "**/__tests__/**",
      "__tests__/**",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text",
      "text-summary",
      "lcovonly"
    ],
    "all": true
  }
}
